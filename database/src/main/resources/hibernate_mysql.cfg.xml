<?xml version='1.0' encoding='utf-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
    "-//Hibernate/Hibernate Configuration DTD//EN"
        "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<!--"http://hibernate.org/dtd/hibernate-configuration.dtd">-->
<hibernate-configuration>
  <session-factory>
    <property name="connection.driver_class">com.mysql.jdbc.Driver</property>
    <property name="dialect">org.hibernate.dialect.MySQL57Dialect</property>
    <property name="connection.url">jdbc:mysql://localhost:3306/myforecasts</property>
    <property name="connection.username">root</property>
    <property name="connection.password">root</property>
    <property name="show_sql">true</property>
    <property name="format_sql">true</property>

    <mapping class="by.forecasts.entities.TournamentGroup"/>
    <mapping class="by.forecasts.entities.Match"/>
    <mapping class="by.forecasts.entities.PlayoffGroup"/>
    <mapping class="by.forecasts.entities.RegularGroup"/>
    <mapping class="by.forecasts.entities.Team"/>
    <mapping class="by.forecasts.entities.Tournament"/>
    <mapping class="by.forecasts.entities.Forecast"/>
    <mapping class="by.forecasts.entities.User"/>
    <!--<mapping class="by.forecasts.UserDaoImpl"/>-->
  </session-factory>
</hibernate-configuration>